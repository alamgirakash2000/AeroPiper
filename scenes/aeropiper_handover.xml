<mujoco model="AeroPiperHandover">
  <include file="aeropiper_base_scene.xml"/>

  <asset>
    <material name="ball_mat" rgba="0.9 0.2 0.2 1"/>
  </asset>

  <worldbody>
    <!-- Light ball to be passed from right to left -->
    <body name="handover_ball" pos="0.65 -0.2 0.95">
      <joint name="handover_ball_free" type="free"/>
      <geom name="handover_ball_geom" type="sphere" size="0.03" mass="0.05" material="ball_mat"/>
      <site name="handover_ball_site" pos="0 0 0" size="0.01" rgba="0 0 0 0" group="4"/>
    </body>

    <!-- Visual cue where the left hand should hold the ball -->
    <site name="handover_target" pos="0.55 0.2 1.00" size="0.03" rgba="0.2 0.8 0.2 0.4" group="1"/>
  </worldbody>
</mujoco>
